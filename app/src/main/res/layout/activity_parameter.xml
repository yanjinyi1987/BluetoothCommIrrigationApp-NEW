<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parameter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="geekband.yanjinyi1987.com.bluetoothcomm.ParameterActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建植物"
        android:id="@+id/new_plant_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询参数"
        android:id="@+id/search_parameters"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/divider_in_parameter_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#444444"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/new_plant_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="植物名称："
        android:layout_below="@+id/divider_in_parameter_1"
        android:id="@+id/plant_text_for_parameters"
        android:layout_marginRight="5dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/plant_text_for_parameters"
        android:id="@+id/plant_spinner_for_parameters"
        android:layout_below="@+id/divider_in_parameter_1"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成熟度："
        android:layout_toRightOf="@+id/plant_spinner_for_parameters"
        android:layout_below="@+id/divider_in_parameter_1"
        android:id="@+id/growth_time_text_for_parameters"
        android:layout_marginRight="5dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/growth_time_text_for_parameters"
        android:layout_below="@+id/divider_in_parameter_1"
        android:id="@+id/growth_time_spinner_for_parameters" />

    <ListView
        android:id="@+id/parameter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/growth_time_spinner_for_parameters"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        android:id="@+id/return_to_mainactivity"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/parameter_list"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:id="@+id/write_to_database"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/parameter_list"/>


</RelativeLayout>
